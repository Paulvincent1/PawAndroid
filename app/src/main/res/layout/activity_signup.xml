<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Secondary"
    style="@style/custom_card_view_style"
    tools:context=".SignupActivity">

    <ImageView
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/paw_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:text="Sign Up"
        android:textColor="@color/Headline_Stroke"
        android:textSize="30dp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        style="@style/custom_card_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:text="Let's Get Started!"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/Secondary"/>

            <EditText
                android:id="@+id/til_username"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="24dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/custom_edittext_2nd"
                android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Full Name:"
                android:inputType="textEmailAddress"
                android:maxEms="50"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/Headline_Stroke"
                android:textColorHint="@color/Headline_Stroke"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/til_email"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="24dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/custom_edittext_2nd"
                android:drawableLeft="@drawable/baseline_email"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Email:"
                android:inputType="textEmailAddress"
                android:maxEms="50"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/Headline_Stroke"
                android:textColorHint="@color/Headline_Stroke"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/til_password"
                android:layout_width="260dp"
                android:layout_height="37dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:autofillHints="password"
                android:background="@drawable/custom_edittext_2nd"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="10dp"
                android:ems="30"
                android:gravity="center_vertical"
                android:hint="Password:"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/Headline_Stroke"
                android:textColorHint="@color/Headline_Stroke" />

            <EditText
                android:id="@+id/til_password2"
                android:layout_width="260dp"
                android:layout_height="37dp"
                android:layout_marginTop="24dp"
                android:autofillHints="password"
                android:background="@drawable/custom_edittext_2nd"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="10dp"
                android:ems="30"
                android:gravity="center_vertical"
                android:hint="Confirm Password:"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/Headline_Stroke"
                android:textColorHint="@color/Headline_Stroke"
                android:layout_gravity="center_horizontal" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signup"
                android:layout_width="215dp"
                android:layout_height="49dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_edittext_2nd"
                android:text="SignUp"
                android:textColor="@color/Headline_Stroke"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
