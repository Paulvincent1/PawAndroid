<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PawAndroid" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimaryVariant">@color/Headline_Stroke</item>
        <item name="colorSecondaryVariant">@color/Headline_Stroke</item>
        <item name="colorSecondary">@color/Headline_Stroke</item>
        <item name="android:statusBarColor" tools:targetApi="l"> ?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.PawAndroid" parent="Base.Theme.PawAndroid" />



    <style name="Theme.PAW" parent="Base.Theme.PawAndroid" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/Headline_Stroke</item>
    </style>

    <style name="CustomCheckboxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/Secondary</item>
        <item name="colorControlActivated">@color/Secondary</item>
        <item name="android:textColorSecondary">@color/Secondary</item>
    </style>




    <!--    card-->
    <style name="custom_card_view_style" parent="Widget.MaterialComponents.CardView" >
        <item name="shapeAppearanceOverlay">@style/custom_card_view</item>
        <item name="cardBackgroundColor">@color/Headline_Stroke</item>
        <item name="android:theme">@style/CustomCheckboxTheme</item>
    </style>
    <style name="custom_card_view" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">70dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!--    floating bar na bilog-->
    <style name="CircularFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">0dp</item> <!-- Remove shadow -->
        <item name="pressedTranslationZ">0dp</item> <!-- Remove shadow on press -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Circular</item> <!-- Apply circular shape -->
    </style>

    <style name="ShapeAppearanceOverlay.App.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% means a circle -->
    </style>



</resources>